<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start" >

    <Button
        android:id="@+id/OnePlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:minHeight="100dp"
        android:text="1 Player" />

    <Button
        android:id="@+id/FourPlayersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:minHeight="100dp"
        android:text="4 Players" />

    <Button
        android:id="@+id/ThreePlayersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FourPlayersButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:minHeight="100dp"
        android:text="3 Players" />

    <Button
        android:id="@+id/TwoPlayersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/OnePlayerButton"
        android:layout_marginTop="23dp"
        android:minHeight="100dp"
        android:text="2 Players" />

</RelativeLayout>